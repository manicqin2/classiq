# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file with real credentials to version control
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string for async operations
# Format: postgresql+asyncpg://username:password@hostname:port/database_name
#
# Docker Compose: Use service name as hostname (e.g., postgres:5432)
# Local Development: Use localhost:5432 or 127.0.0.1:5432
DATABASE_URL=postgresql+asyncpg://classiq_user:classiq_password@localhost:5432/classiq_db

# =============================================================================
# Message Queue Configuration
# =============================================================================
# RabbitMQ connection string for task queue
# Format: amqp://username:password@hostname:port/vhost
#
# Docker Compose: Use service name as hostname (e.g., rabbitmq:5672)
# Local Development: Use localhost:5672 or 127.0.0.1:5672
# Default vhost is / (can be omitted or specified explicitly)
RABBITMQ_URL=amqp://classiq_user:classiq_password@localhost:5672/

# =============================================================================
# API Server Configuration
# =============================================================================
# Port for the FastAPI application server
# Default: 8000
# Docker Compose: Internal container port (mapped in docker-compose.yml)
PORT=8000

# =============================================================================
# Logging Configuration
# =============================================================================
# Logging level for application logs
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
# Development: Use DEBUG for detailed logs
# Production: Use INFO or WARNING
LOG_LEVEL=INFO

# =============================================================================
# Environment Configuration
# =============================================================================
# Deployment environment identifier
# Options: development, staging, production
# Default: development
# This affects logging verbosity, error handling, and other behaviors
ENVIRONMENT=development

# =============================================================================
# Docker Compose Notes
# =============================================================================
# When running with Docker Compose, update hostnames to match service names:
# - DATABASE_URL=postgresql+asyncpg://classiq_user:classiq_password@postgres:5432/classiq_db
# - RABBITMQ_URL=amqp://classiq_user:classiq_password@rabbitmq:5672/
#
# The credentials should match those defined in docker-compose.yml
# =============================================================================
